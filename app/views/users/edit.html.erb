<h1>ユーザー情報を編集する</h1>
<hr>
<%= form_for @user do |f| %>
<div class="field">
    <%= f.label :image %><br />
    <%= image_tag @user.image.url(:medium) %>
    <br><br>
    <%= f.file_field :image, autofocus: true, class: "form-control my-form" %>
</div>
<div class="field">
  <%= f.label :苗字 %>
  <%= f.text_field :first_name, class: "form-control my-form" %>
</div>
<div class="field">
  <%= f.label :名前 %>
  <%= f.text_field :last_name, class: "form-control my-form" %>
</div>
<div class="field">
  <%= f.label :shop %>
  <%= f.text_field :salon_name, class: "form-control my-form" %>
</div>
<div class="field">
  <%= f.label :shopホームページ %>
  <%= f.text_field :salon_url, class: "form-control my-form" %>
</div>
<div class="field">
  <%= f.label :自己紹介 %>
  <%= f.text_field :profile, class: "form-control my-form" %>
</div>
  <hr>
  <%= f.submit "登録する", :class => "btn btn-primary" %>
<% end %>
<hr>
<a href="/users/<%= @user.id %>" class="btn btn-info">ユーザー情報に戻る</a>