<div class="row">
  <div class="col-xs-6">
  <% if User.find(@user.id).user_type == "s" %>
    <h1>stylist情報</h1>
    <hr>
    <P><%= image_tag @user.image.url(:medium) %></P>
    <br><br>
    <p>名前：<%= @user.first_name %><%= @user.last_name %>さん</p>
    <p>性別：<%= @user.gender %></p>
    <p>年齢：<%= @user.age %>歳</p>
    <p>salon：<%= @user.salon_name %></p>
    <p>salonホームページ：<%= @user.salon_url %></p>
    <p>自己紹介：<%= @user.profile %></p>
  <% else %>
    <h1>User情報</h1>
    <hr>
    <P><%= image_tag @user.image.url(:medium) %></P>
    <br><br>
    <p>名前：<%= @user.first_name %><%= @user.last_name %>さん</p>
    <p>性別：<%= @user.gender %></p>
    <p>年齢：<%= @user.age %>歳</p>
    <p>自己紹介：<%= @user.profile %></p>
  <% end %>
<% if @user.id == current_user.id %>
  <p><a href="/users/<%= @user.id %>/edit" class="btn btn-success">ユーザー情報を編集する</a></p>
  <p><a href="/rooms" class="btn btn-warning">TalkRoom一覧</a></p>
<% else %>
  <%= form_for @room do |f| %>
    <%= fields_for @entry do |e| %>
      <%= e.hidden_field :user_id, :value => @user.id %>
    <% end %>
      <%= f.submit "TALK", class: "btn btn-warning" %>
  <% end %>
<% end %>

<br>
<%= render 'follow_form' %>
<%= render 'stats' %>
  </div>
<% if @user.id == current_user.id %>
  <div class="col-xs-6">
    <h1>TALK一覧</h1>
    <hr>
    <% @entries.each do |e| %>
      <p><a href="/rooms/<%= e.room.id %>"><strong><%= e.room.name %></strong></a></p>
      <%= link_to "削除", "/rooms/#{e.room.id}", method: :delete, data: {confirm: "本当に削除しますか？"} %>
      <hr>
    <% end %>
    <a href="/rooms" class="btn btn-info">TALK一覧を見る</a>
  </div>
<% end %>
</div>
<hr>
<p><a href="/posts" class="btn btn-info">投稿一覧</a></p>
