<div class="container main-page">
  <h1>投稿を作る</h1>
  <hr>
  <%= form_for @post do |f| %>
    <div class="field">
      <%= f.label :タイトル %><br />
      <%= f.text_field :title, autofocus: true, placeholder: "タイトルを入力してください", class: "form-control my-form" %>
    </div>
    
    <div class="field">
      <%= f.label :コメント %><br />
      <%= f.text_area :content, autofocus: true, class: "form-control my-form" %>
    </div>
    
    <div class="field">
      <%=f.label :画像をアップロード %><br />
      <%= f.file_field :images, multiple: true %>
    </div>

    <hr>
    <%= f.submit "登録する", class: "btn btn-primary" %>
  <% end %><br>
  <a href="/posts" class= "btn btn-primary">投稿一覧</a>
</div>