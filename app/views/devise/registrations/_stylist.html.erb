<h2>Stylst Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  
  <div class="field">
    <%= f.label :image %><br />
    <%= image_tag @user.image.url(:medium) %>
    <br><br>
    <%= f.file_field :image, autofocus: true, class: "form-control my-form" %>
  </div>
  
  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name, autofocus: true, class: "form-control my-form" %>
  </div>
  
  <div class="field">
    <%= f.label :last_name %><br />
    <%= f.text_field :last_name, autofocus: true, class: "form-control my-form" %>
  </div>
  
  <div class="field">
    <%= f.label :age, '年齢'%><br />
    <%= f.text_field :age, autofocus: true, class: "form-control my-form" %>
  </div>
  
  <div class="field">
    <%= f.label :gender %><br />
    <%= f.radio_button :gender, "男性", autofocus: true %>男性
    <%= f.radio_button :gender, "女性", autofocus: true %>女性
    <%= f.radio_button :gender, "その他", autofocus: true %>その他
  </div>
  
  <div class="field">
    <%= f.label :icon_name %><br />
    <%= f.text_field :icon_name, autofocus: true, class: "form-control my-form" %>
  </div>
  
  <div class="field">
    <%= f.label :profile %><br />
    <%= f.text_area :profile, autofocus: true, class: "form-control my-form" %>
  </div>
  
  <div class="field">
    <%= f.label :salon_name %><br />
    <%= f.text_field :salon_name, autofocus: true, class: "form-control my-form" %>
  </div>
  
  <div class="field">
    <%= f.label :salon_url %><br />
    <%= f.text_field :salon_url, autofocus: true, class: "form-control my-form" %>
  </div>
  

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control my-form" %>
  </div>
  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control my-form" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>


